<!DOCTYPE html>
<html>
<head>
  <title>Techfolio</title>
  <%= csrf_meta_tags %>
  <%= csp_meta_tag %>
  <%= stylesheet_link_tag 'application', media: 'all' %>
  <%= javascript_pack_tag 'application' %>
</head>
<body>
  <header>
    <div class="container">
      <nav>
        <ul>
          <li><%= link_to 'Home', root_path %></li>
          <li><%= link_to 'About', '#' %></li>
          <li><%= link_to 'Sponsor', '#' %></li>
          <li><%= link_to 'Badges', '#' %></li>
          <li><%= link_to 'Newsletter', '#' %></li>
        </ul>
        <div class="profile-info">
          <span>Rishabh Lodhi</span>
          <a href="#" class="follow-button">Follow</a>
          <a href="mailto:rishabh@example.com" class="email-button">Email</a>
        </div>
        <div class="social-links">
          <% @social_links.each do |link| %>
            <a href="<%= link.url %>"><%= link.platform %></a>
          <% end %>
        </div>
      </nav>
    </div>
  </header>
  <main>
    <div class="container">
      <section id="experiences">
        <h2>Experience</h2>
        <% @experiences.each do |experience| %>
          <div class="experience">
            <span><%= experience.start_date %> - <%= experience.end_date %></span>
            <h3><%= experience.title %> at <%= experience.company %></h3>
            <p><%= experience.description %></p>
            <p><%= experience.technologies %></p>
            <p><%= experience.location %></p>
            <p><%= experience.achievements %></p>
          </div>
        <% end %>
      </section>
      <section id="projects">
        <h2>Projects</h2>
        <% @projects.each do |project| %>
          <div class="project">
            <h3><%= link_to project.name, project.url %></h3>
            <p><%= project.description %></p>
          </div>
        <% end %>
      </section>
      <section id="skills">
        <h2>Technical Skills</h2>
        <% @technical_skills.each do |skill| %>
          <div class="skill">
            <p><%= skill.name %>: <%= skill.proficiency %>/5</p>
          </div>
        <% end %>
      </section>
    </div>
  </main>
</body>
</html>
